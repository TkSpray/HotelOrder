<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.suncaper.hotelorder.mapper.Room_typeMapper">

    <resultMap id="SelectAllRoom" type="com.suncaper.hotelorder.domain.Room_type">
        <id column="t_id" jdbcType="CHAR" property="tId" />
        <result column="type" jdbcType="CHAR" property="type" />
        <result column="price" jdbcType="INTEGER" property="price" />
        <result column="total" jdbcType="INTEGER" property="total" />
        <result column="surplus" jdbcType="INTEGER" property="surplus" />
        <result column="breakfast" jdbcType="CHAR" property="breakfast" />
        <result column="c_people" jdbcType="INTEGER" property="cPeople" />
        <result column="area" jdbcType="CHAR" property="area" />
        <association property="room" javaType="com.suncaper.hotelorder.domain.Room">
            <id column="r_id" jdbcType="VARCHAR" property="rId" />
            <result column="t_id" jdbcType="CHAR" property="tId" />
            <result column="floor" jdbcType="INTEGER" property="floor" />
            <result column="state" jdbcType="CHAR" property="state" />
        </association>
    </resultMap>

    <select id="selectAllByType" parameterType="java.lang.String" resultMap="SelectAllRoom">
        select *
        from room_type B, room A
        where B.t_id = #{typeId} AND B.t_id  = A.t_id
    </select>

</mapper>